{% extends 'base.html.twig' %}

{% block title %}
    Homepage
    |
    {{ parent() }}
{% endblock %}

{% block body %}
<div class="search-block">
    <p>Search :</p>
    <form action="{{ path('index_search') }}">
        <input
            type="search"
            name="q"
            class="form-control searchbar"
            placeholder="Type here"
            aria-label="Search"
        >
        <input type="submit" value="Submit" class="base-btn blue-btn">
    </form>
</div>
    <section class="article-container">
        {% for article in articles %}
            <a href="{{ path('show_article', {'id': article.id}) }}" class="card">
                <div class="card-body">
                    <p class="card-title">{{ article.name }}</p>
                    <img class="card-img" src="{{ article.picture }}" alt="{{ article.name }}">
                    <p class="card-text">
                        {{ article.price / 100 }} â‚¬
                    </p>
                    {# <a href="{{ path('show_article', {'id': article.id}) }}" class="btn btn-primary">Lire</a> #}
                </div>
            </a>
        {% endfor %}
    </section>
    {{ knp_pagination_render(articles) }}
{% endblock %}
