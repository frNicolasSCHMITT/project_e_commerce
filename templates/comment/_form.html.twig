{{ form_start(form) }}
    <div class="comment-form">
        {{ form_widget(form) }}
        {% if app.user %} 
            <button class="base-btn green-btn">{{ button_label|default('Send') }}</button>
            
            {% else %}
            <a href="{{ path('app_login') }}" class="base-btn red-btn">Log In to comment</a>
        {% endif %}
    </div>
{{ form_end(form) }}
